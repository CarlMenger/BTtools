{
	"name": "BlazeToolsDeluxe",
	"description": "We have to do our own development 'round here",
	"manifest_version": 3,
	"author": "Martin Both",
	"version": "1.0.0",
	"icons": {
		"16": "images/gearWheel-16.png",
		"32": "images/gearWheel-32.png",
		"48": "images/gearWheel-48.png",
		"128": "images/gearWheel-128.png"
	},
	"action": {
		"default_icon": {
		  "16": "images/gearWheel-16.png",
		  "32": "images/gearWheel-32.png",
		  "48": "images/gearWheel-48.png",
		  "128": "images/gearWheel-128.png"
		},
		"default_popup": "toolbar.html"
	},
	"background": {
		"service_worker": "scripts/background.js"
	},
	"permissions": [
		"scripting",
		"activeTab",
		"tabs"
	],
	"host_permissions": [
		"https://developer.chrome.com/*",
		"https://blazetools-cz.cz.prod/*",
		"https://blazetools-sk.cz.prod/*"
	  ],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+U"
			}
		}
	},
	"web_accessible_resources": [
		{
		  "resources": ["scripts/main.js"],
		  "matches": ["<all_urls>"],
		  "extension_ids": []
		}
	  ],
	  "externally_connectable": {
		"ids": ["*"]
	  }
}